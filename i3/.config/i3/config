client.focused_inactive #333333 #5f676a #ffffff #484e50
client.unfocused        #333333 #222222 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

# go back to the last workspace when go to the active one


# delay changing window from 'hint' color to 'active'
force_display_urgency_hint 500 ms


# per-window configuration
for_window [instance="wicd-client.py"] floating enable
for_window [instance="xfce4-notifyd"] floating enable

